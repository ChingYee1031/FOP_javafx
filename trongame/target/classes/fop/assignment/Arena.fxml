<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="handleKeyPress" onKeyPressed="#handleKeyPress" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fop.arena.ArenaController">
   <children>
      <Canvas fx:id="gameCanvas" height="600.0" mouseTransparent="true" pickOnBounds="true" width="600.0" />
      <VBox fx:id="characterMenu" alignment="CENTER" layoutX="194.0" layoutY="191.0" prefHeight="200.0" prefWidth="100.0">
         <children>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#selectTronAction" prefHeight="26.0" text="TRON" />
                  <ButtonBar prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                      <Button mnemonicParsing="false" onAction="#selectKevinAction" text="KEVIN" />
                    </buttons>
                  </ButtonBar>
              </buttons>
            </ButtonBar>
         </children>
      </VBox>
      <VBox fx:id="arenaMenu" alignment="CENTER" layoutX="285.0" layoutY="190.0" prefHeight="201.0" prefWidth="24.0" visible="false">
         <children>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#loadArena1Action" text="ARENA 1" />
              </buttons>
            </ButtonBar>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#loadArena2Action" text="ARENA 2" />
              </buttons>
            </ButtonBar>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#loadArena3Action" text="ARENA 3" />
              </buttons>
            </ButtonBar>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#loadRandomArenaAction" text="RANDOM" />
              </buttons>
            </ButtonBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
