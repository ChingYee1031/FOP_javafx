<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="30.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fop.assignment.GameOverController">
   <children>
      <Label text="GAME OVER" textFill="RED">
         <font>
            <Font name="Verdana Bold" size="48.0" />
         </font>
      </Label>
      <Label text="You have been derezzed." textFill="WHITE">
         <font>
            <Font name="Consolas" size="24.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleReturnToMenu" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #00FFFF; -fx-text-fill: black; -fx-font-weight: bold;" text="RETURN TO MENU">
               <font>
                  <Font size="16.0" />
               </font>
               <cursor>
                  <?import javafx.scene.Cursor?>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleExit" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #FF0000; -fx-text-fill: white; -fx-font-weight: bold;" text="EXIT GAME">
               <font>
                  <Font size="16.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>