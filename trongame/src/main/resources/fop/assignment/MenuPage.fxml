<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
           prefHeight="720.0" prefWidth="1280.0" 
           style="-fx-background-color: black;" 
           stylesheets="@style.css"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="fop.assignment.MenuPage">
   
   <children>
      <ImageView fitHeight="720.0" fitWidth="1280.0" focusTraversable="true" opacity="0.6" pickOnBounds="true">
         <image>
            <Image url="@tron_background.png" />
         </image>
      </ImageView>
      
      <VBox alignment="CENTER" spacing="25.0">
         <children>
            <Label text="TRON GAME" textFill="CYAN">
               <font>
                  <Font name="OCR A Extended" size="50.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Label>

            <Button fx:id="startNewGameButton" mnemonicParsing="false" onAction="#handleStartNewGame" 
                    prefHeight="60.0" prefWidth="300.0" 
                    styleClass="menu-button-cyan" 
                    text="START NEW GAME">
               <font>
                  <Font name="OCR A Extended" size="24.0" />
               </font>
            </Button>

            <Button fx:id="continueGameButton" mnemonicParsing="false" onAction="#handleContinueGame" 
                    prefHeight="60.0" prefWidth="300.0" 
                    styleClass="menu-button-cyan" 
                    text="CONTINUE GAME">
               <font>
                  <Font name="OCR A Extended" size="24.0" />
               </font>
            </Button>

            <Button fx:id="leaderboardButton" mnemonicParsing="false" onAction="#handleLeaderboard" 
                    prefHeight="60.0" prefWidth="300.0" 
                    styleClass="menu-button-yellow" 
                    text="LEADERBOARD">
               <font>
                  <Font name="OCR A Extended" size="24.0" />
               </font>
            </Button>

            <Button fx:id="exitGameButton" mnemonicParsing="false" onAction="#handleExit" 
                    prefHeight="60.0" prefWidth="300.0" 
                    styleClass="menu-button-red" 
                    text="EXIT GAME">
               <font>
                  <Font name="OCR A Extended" size="24.0" />
               </font>
            </Button>
         </children>
      </VBox>

      <VBox fx:id="resetConfirmationOverlay" alignment="CENTER" spacing="20.0" style="-fx-background-color: rgba(0, 0, 0, 0.95);" visible="false">
         <children>
            <Label text="WARNING: RESET PROGRESS?" textFill="RED">
               <font>
                  <Font name="OCR A Extended" size="40.0" />
               </font>
            </Label>
            
            <Label text="This will erase your current Level and XP." textFill="WHITE">
               <font>
                  <Font name="Consolas" size="18.0" />
               </font>
            </Label>
            
            <Button mnemonicParsing="false" onAction="#handleConfirmReset" 
                    prefHeight="50.0" prefWidth="300.0" 
                    styleClass="menu-button-red" 
                    text="YES, RESET &amp; START">
               <font>
                  <Font name="OCR A Extended" size="18.0" />
               </font>
            </Button>
            
            <Button mnemonicParsing="false" onAction="#handleCancelReset" 
                    prefHeight="50.0" prefWidth="300.0" 
                    styleClass="menu-button-cyan" 
                    text="NO, GO BACK">
               <font>
                  <Font name="Consolas Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>

   </children>
</StackPane>