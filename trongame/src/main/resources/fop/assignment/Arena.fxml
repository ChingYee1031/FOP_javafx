<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane onKeyPressed="#handleKeyPress" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fop.assignment.ArenaController">
   <children>
      <Canvas fx:id="gameCanvas" height="600.0" width="600.0" />
      
      <VBox fx:id="arenaMenu" alignment="CENTER" spacing="20.0" visible="true">
         <children>
            <Button onAction="#loadArena1Action" prefWidth="180.0" text="ARENA 1">
               <font>
                  <Font name="OCR A Extended" size="24.0" />
               </font>
            </Button>
            <Button onAction="#loadArena2Action" prefWidth="180.0" text="ARENA 2">
               <font>
                  <Font name="OCR A Extended" size="24.0" />
               </font>
            </Button>
            <Button onAction="#loadArena3Action" prefWidth="180.0" text="ARENA 3">
               <font>
                  <Font name="OCR A Extended" size="24.0" />
               </font>
            </Button>
            <Button onAction="#loadRandomArenaAction" prefWidth="180.0" text="RANDOM">
               <font>
                  <Font name="OCR A Extended" size="24.0" />
               </font>
            </Button>
         </children>
      </VBox>
      
      <VBox fx:id="characterMenu" alignment="CENTER" visible="false" />

      <VBox fx:id="gameOverMenu" alignment="CENTER" managed="false" spacing="20.0" style="-fx-background-color: rgba(0, 0, 0, 0.8);" visible="false">
         <children>
            <Label text="GAME OVER" textFill="WHITE">
               <font>
                  <Font name="OCR A Extended" size="48.0" />
               </font>
            </Label>
            <Button onAction="#handleRestart" prefWidth="180.0" text="RESTART">
               <font>
                  <Font name="OCR A Extended" size="24.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>